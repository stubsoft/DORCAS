@model DorcasClub.Elements

@{
    ViewBag.Title = "Modification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Modifier l'aliment @Model.nameElement</span></div>
                <div class="col-md-4" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Elements">Aliments</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Modification
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </div>


    @using (Html.BeginForm("Edit", "Elements", FormMethod.Post, new { enctype = "multipart/form-data" }))

    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="heading-elements" style="position: absolute; right:0">
                            <button type="submit" class="btn btn-success pull-right" style=" margin-top: -12px;"><i class="la la-save"></i> Enregistrer</button>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <h4>Infos Aliments</h4>
                                <hr />
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="nameElement" class="col-sm-5 col-form-label"> Nom Aliment </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.nameElement, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.nameElement, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="weightUnity" class="col-sm-5 col-form-label"> Poids (G) </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.weightUnity, new { htmlAttributes = new { @class = "form-control", @onchange = "energie_100g()" } })
                                                @Html.ValidationMessageFor(model => model.weightUnity, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group  row no-gutters">
                                            <label for="price" class="col-sm-5 col-form-label"> Prix </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-9">

                                <h4>Infos Nutritives</h4>
                                <hr />
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="Glucide" class="col-sm-5 col-form-label"> Glucide/100g </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.Glucide, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                @Html.ValidationMessageFor(model => model.Glucide, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="Proteine" class="col-sm-5 col-form-label"> Proteine/100g  </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.Proteine, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                @Html.ValidationMessageFor(model => model.Proteine, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group  row no-gutters">
                                            <label for="Lipide" class="col-sm-5 col-form-label"> Lipide/100g  </label>
                                            <div class="col-sm-7">
                                                @Html.EditorFor(model => model.Lipide, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                @Html.ValidationMessageFor(model => model.Lipide, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group  row no-gutters">
                                            <label for="Energie" class="col-sm-3 col-form-label"> Energie (Kcal) </label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Energie, new { htmlAttributes = new { @class = "form-control", @type = "number", @onchange = "energieKJ()" } })
                                                @Html.ValidationMessageFor(model => model.Energie, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group  row no-gutters">
                                            <label for="Kj" class="col-sm-3 col-form-label"> Energie (kJ) </label>
                                            <div class="col-sm-9">
                                                @Html.EditorFor(model => model.Kj, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                                                @Html.ValidationMessageFor(model => model.Kj, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group  row no-gutters">
                                            <label for="description" class="col-sm-3 col-form-label"> Description </label>
                                            <div class="col-sm-9">
                                                @Html.TextAreaFor(model => model.description, htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="col-md-3">
                                <div style="width: 235px; margin-top: 33px; ">
                                    <img id="blah" src="/Elements/RetrieveImage/@Model.idElement" alt="picture aliment" style="width: 100%" class="img-thumbnail" />
                                </div>
                                <br />
                                <input type="file" name="imageElement" id="imageElement" onchange="document.getElementById('blah').src = window.URL.createObjectURL(this.files[0])" />
                            </div>
                        </div>
                                
                              
                            </div>
                        </div>
                    </div>

        </div>
        @Html.HiddenFor(model => model.idElement, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.insertionDate, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.imageElement, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.FileName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.HiddenFor(model => model.imagephysique, new { htmlAttributes = new { @class = "form-control" } })
    }

</div> 


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
    function fileCheck(obj) {
        var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
        if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
            alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
        }
    }
    </script>
    <script>
    function energieKJ()
    {
    var Kcal=$('#Energie').val();
    var KJ= parseFloat(4.185) * parseFloat(Kcal);
    $('#Kj').val(KJ);
    }
    function energie_100g()
    {
    var Poids=$('#weightUnity').val();
    var coei=parseFloat(Poids)/100;

    /*var GL=$('#Glucide').val();
    $('#Glucide').val(GL*coei);

    var PR=$('#Proteine').val();
    $('#Proteine').val(PR*coei);

    var LP=$('#Lipide').val();
    $('#Lipide').val(LP*coei);*/

    var Kcal=$('#Energie').val();
    $('#Energie').val(Kcal*coei);

    var KJ= $('#Kj').val();
    $('#Kj').val(KJ*coei);
    }
    </script>
}

