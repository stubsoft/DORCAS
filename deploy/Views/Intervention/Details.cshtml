@model DorcasClub.PreventiveIntervention

@{
    ViewBag.Title = "Consulter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-6">
                    <span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Modifier Intervention N° @Model.idIntervention</span>
                </div>
                <div class="col-md-6" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Intervention">Intervention</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Consultation
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Information Genérale</h4>
                        <hr />
                    </div>
                    <div class="card-body row pt-0">
                         <div class="col-md-4">
                            <div class="form-group row no-gutters">
                                <label for="Date" class="col-sm-4 col-form-label"> Date Intervention </label>
                                <div class="col-md-8">
                                    <input type="datetime-local" name="dateIntervention" id="dateIntervention" class="form-control" value="@ViewData["d1"]" readonly="readonly"/>
                                    @Html.ValidationMessageFor(model => model.dateIntervention, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row no-gutters">
                                <label for="titre" class="col-sm-4 col-form-label"> Titre </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group row no-gutters">
                                <label for="machine" class="col-sm-4 col-form-label"> Machine </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Materials_idMaterials", null, htmlAttributes: new { @class = "select2 form-control" })
                                    @Html.ValidationMessageFor(model => model.Materials_idMaterials, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row no-gutters">
                                <label for="Description" class="col-sm-4 col-form-label"> Description </label>
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                        <div class="col-md-4">
                            <div class="form-group row no-gutters">
                                <label for="coach" class="col-sm-4 col-form-label"> Entreneur </label>
                                <div class="col-md-8">
                                    @Html.DropDownList("Materials_Coach_idCoach", null, htmlAttributes: new { @class = "select2 form-control" })

                                    @Html.ValidationMessageFor(model => model.Materials_Coach_idCoach, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
