@model DorcasClub.Machine

@{
    ViewBag.Title = "Consulter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
        <div class="row no-gutters">
            <div class="col-md-3"><span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Consultation Machine (@Model.Designation)</span></div>
            <div class="col-md-6" style=" padding-top: 8px;">
                <div class="row breadcrumbs-top d-inline-block">
                    <div class="breadcrumb-wrapper">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/">Tableau de Bord</a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="/Machines">Machines</a>
                            </li>
                            <li class="breadcrumb-item active">
                                Consulter
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Edit", "Machines", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Information Genérale</h4>
                        <hr />
                    </div>
                    <div class="card-body row pt-0">

                        <div class="col-md-12 row">
                            <div class="col-md-9">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="IdCategorie" class="col-sm-4 col-form-label"> Categorie </label>
                                            <div class="col-sm-8">
                                                @Html.EditorFor(model => model.Categorie.Libelle, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Categorie.Libelle, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="Designation" class="col-sm-4 col-form-label"> Désignation </label>
                                            <div class="col-sm-8">
                                                @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group row no-gutters">
                                            <label for="MaxOccupation" class="col-sm-4 col-form-label"> Max Occ </label>
                                            <div class="col-sm-8">
                                                @Html.EditorFor(model => model.MaxOccupation, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                                @Html.ValidationMessageFor(model => model.MaxOccupation, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="grid-hover">
                                    <figure class="effect-zoe">
                                        <img src="@Url.Content(Model.FilePath)" alt="" height=200 width=400 />
                                        <figcaption>
                                            <h3> @Model.Designation</h3>
                                        </figcaption>
                                    </figure>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>
        </div>

    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        function fileCheck(obj) {
            var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
            if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
                alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
            }
        }
    </script>
   
}
