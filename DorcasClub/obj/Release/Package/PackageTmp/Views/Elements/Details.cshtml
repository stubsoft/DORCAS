@model DorcasClub.Element
@{
    ViewBag.Title = "Consulter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Consultation Aliment (@Model.Nom)</span>
                </div>
                <div class="col-md-6" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Elements">Aliments</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Consulter
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>

            </div>


        </div>

    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row">
    <div class="col-lg-12 col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Information Personnelle </h4>
                <hr />
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-10">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row no-gutters">
                                    <label for="nameElement" class="col-sm-5 col-form-label"> Nom Aliment </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row no-gutters">
                                    <label for="weightUnity" class="col-sm-5 col-form-label"> Poids (G) </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Poids, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Poids, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group  row no-gutters">
                                    <label for="price" class="col-sm-5 col-form-label"> Prix </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Prix, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Prix, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group  row no-gutters">
                                    <label for="description" class="col-sm-3 col-form-label"> Description </label>
                                    <div class="col-sm-9">
                                        @Html.TextAreaFor(model => model.Description, htmlAttributes: new { @class = "form-control", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <h4>Infos Nutritives</h4>
                            <hr />
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group row no-gutters">
                                    <label for="Glucide" class="col-sm-5 col-form-label"> Glucide/100g </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Glucide, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Glucide, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group row no-gutters">
                                    <label for="Proteine" class="col-sm-5 col-form-label"> Proteine/100g  </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Proteine, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Proteine, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group  row no-gutters">
                                    <label for="Lipide" class="col-sm-5 col-form-label"> Lipide/100g  </label>
                                    <div class="col-sm-7">
                                        @Html.EditorFor(model => model.Lipide, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Lipide, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group  row no-gutters">
                                    <label for="Energie" class="col-sm-3 col-form-label"> Energie (Kcal) </label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Energie, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Energie, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group  row no-gutters">
                                    <label for="Kj" class="col-sm-3 col-form-label"> Energie (kJ) </label>
                                    <div class="col-sm-9">
                                        @Html.EditorFor(model => model.Kj, new { htmlAttributes = new { @class = "form-control", @type = "number", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Kj, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div style="width: 200px; margin-top: 3px; ">
                            <img id="img" src="@Url.Content(Model.FilePath)" style="width: 100%" class="img-thumbnail" />
                        </div>
                        <br />
                        <input type="file" name="FileImage" id="FileImage" onchange="document.getElementById('img').src = window.URL.createObjectURL(this.files[0])" />
                    </div>
                </div>


            </div>
        </div>
    </div>

</div>
    }
</div>

