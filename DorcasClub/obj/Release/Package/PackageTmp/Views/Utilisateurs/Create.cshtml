@model DorcasClub.Utilisateur

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="content-header-left col-md-12 col-12 mb-2 breadcrumb-new card">
            <div class="row no-gutters">
                <div class="col-md-3">
                    <span style="padding-top: 9px; font-size: 16px; " class="content-header-title mb-0 d-inline-block">Création utilisateur</span>
                </div>
                <div class="col-md-6" style=" padding-top: 8px;">
                    <div class="row breadcrumbs-top d-inline-block">
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="/">Tableau de Bord</a>
                                </li>
                                <li class="breadcrumb-item">
                                    <a href="/Utilisateurs">Utilisateurs</a>
                                </li>
                                <li class="breadcrumb-item active">
                                    Créer
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @using (Html.BeginForm("Create", "Utilisateurs", FormMethod.Post, new { id = "UtilisateurValidation", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()


        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Information Genérale</h4>
                        <div class="heading-elements">
                            <button type="submit" class="btn btn-success pull-right" style=" margin-top: -12px;"><i class="la la-save"></i> Enregistrer</button>
                        </div>
                        <hr />
                    </div>
                    <div class="card-body row pt-0">

                        <div class="col-md-4">
                            <h4>Données Personnels</h4>
                            <hr />
                            <div class="form-group row no-gutters">
                                <label for="Nom" class="col-sm-4 col-form-label"> Nom </label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row no-gutters">
                                <label for="Prenom" class="col-sm-4 col-form-label"> Prénom </label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.Prenom, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Prenom, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>

                        <div class="col-md-4">
                            <h4>Compte</h4>
                            <hr />
                            <div class="form-group row no-gutters">
                                <label for="NomUtilisateur" class="col-sm-4 col-form-label"> Nom Utilisateur</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.NomUtilisateur, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.NomUtilisateur, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row no-gutters">
                                <label for="MotDePasse" class="col-sm-4 col-form-label"> Mot de passe</label>
                                <div class="col-sm-8">
                                    @Html.EditorFor(model => model.MotDePasse, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                    @Html.ValidationMessageFor(model => model.MotDePasse, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <h4>
                                Role
                            </h4>
                            <hr />
                            <div class="form-group row no-gutters">
                                <label for="IdRole" class="col-sm-4 col-form-label"> Role</label>
                                <div class="col-sm-6">
                                    @Html.DropDownListFor(model => model.IdRole, (IEnumerable
                                     <SelectListItem>)ViewData["ListRole"], "Sélectionner un Role", new { @class = "select2 form-control", @id = "IdRole"})
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $('.js-example-basic-single').select2();
        });

        $("#UtilisateurValidation").submit(function (e) {
            if ($("#Nom").val() == "") {
                e.preventDefault();
                swal({
                    title: "Veuillez Entrer un Nom ",
                    button: "Fermer",
                });
            } else if ($("#Prenom").val() == "") {
                e.preventDefault();
                swal({
                    title: "Veuillez Entrer un Prénom ",
                    button: "Fermer",
                });
            } else if ($("#NomUtilisateur").val() == "") {
                e.preventDefault();
                swal({
                    title: "Veuillez Entrer un Nom Utilisateur ",
                    button: "Fermer",
                });
            }
            else if ($("#MotDePasse").val("#Taille") == "") {
                e.preventDefault();
                swal({
                    title: "Veuillez Entrer un Mot de Passe ",
                    button: "Fermer",
                });
            } else if ($("#IdRole").val() == "") {
                e.preventDefault();
                swal({
                    title: "Veuillez Entrer un Role ",
                    button: "Fermer",
                });
            }
        });
    </script>
}
